<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"
    tools:context=".EditorActivity">

    <!-- Name of the product -->
    <LinearLayout
        android:id="@+id/container_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="@string/category_name"
            style="@style/CategoryStyle" />

        <TextView
            android:id="@+id/view_product_name"
            android:inputType="textCapWords"
            style="@style/EditorFieldStyle" />

    </LinearLayout>

    <!-- Price of the product -->
    <LinearLayout
        android:id="@+id/container_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="@string/category_price"
            style="@style/CategoryStyle" />

            <TextView
                android:id="@+id/view_product_price"
                android:inputType="number"
                style="@style/EditorFieldStyle" />
    </LinearLayout>

    <!-- Supplier of the product -->
    <LinearLayout
        android:id="@+id/container_supplier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="@string/category_supplier"
            style="@style/CategoryStyle" />

            <TextView
                android:id="@+id/view_product_supplier"
                style="@style/EditorFieldStyle" />
    </LinearLayout>

    <!-- Supplier's email -->
    <LinearLayout
        android:id="@+id/container_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="@string/category_email"
            style="@style/CategoryStyle" />

            <TextView
                android:id="@+id/view_product_email"
                style="@style/EditorFieldStyle" />
    </LinearLayout>

    <!-- Quantity of the product -->
    <LinearLayout
        android:id="@+id/container_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="@string/category_quantity"
            style="@style/CategoryStyle" />

            <TextView
                android:id="@+id/view_product_quantity"
                android:inputType="number"
                style="@style/EditorFieldStyle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CategoryStyle"
            android:layout_margin="@dimen/activity_margin"
            android:textSize="@dimen/tittle"
            android:text="@string/category_manager"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin"
            android:orientation="horizontal">

            <TextView
                style="@style/CategoryStyle"
                android:gravity="right"
                android:layout_weight="3"
                android:layout_gravity="center_horizontal"
                android:text="@string/sell_product"/>

            <Button
                style="@style/ButtonStyle"
                android:background="@color/colorPrimaryLight"
                android:text="@string/action_sell"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                style="@style/CategoryStyle"
                android:layout_weight="3"
                android:gravity="right"
                android:text="@string/order_product" />

            <Button
                style="@style/ButtonStyle"
                android:background="@color/colorPrimaryLight"
                android:text="@string/action_order"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>